<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.Activity.VolunteerStudentActivity">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/volunteer_list_toolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_volunteer_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="@+id/notice_list_toolbar"
        android:layout_below="@+id/volunteer_list_toolbar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dimen_4dp"

        />

</RelativeLayout>