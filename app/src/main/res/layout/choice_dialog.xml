<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dimen_4dp"
        app:cardUseCompatPadding="true"

        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            tools:context=".controller.Activity.MainActivity">

            <TextView
                android:id="@+id/text_title_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choice List Dialog"
                android:textColor="@color/transparent_black"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="18dp"
                android:textStyle="bold"
                />

            <View
                android:id="@+id/view_title_dialog"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/transparent_grey"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/text_title_dialog"/>

            <LinearLayout
                android:id="@+id/linear_unit_select_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"

                android:layout_below="@+id/view_title_dialog"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select your Unit:"
                    android:textSize="16dp"
                    android:textColor="@color/transparent_black"
                    />
                <Spinner
                    android:id="@+id/spinner_unit_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_priority_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linear_unit_select_dialog"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select your priority Subject:"
                    android:textSize="16dp"
                    android:textColor="@color/transparent_black"
                    />
                <Spinner
                    android:id="@+id/spinner_priority_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>




        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>